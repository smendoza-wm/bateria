<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:text="Nombre del dispositivo"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/et_idDispositivo"
        android:layout_alignStart="@+id/et_idDispositivo" />

    <EditText
        android:id="@+id/et_idDispositivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/s"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp" />

    <Button
        android:id="@+id/btn_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_idDispositivo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Guardar nombre" />

    <Button
        android:id="@+id/btn_ubicaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_nombre"
        android:layout_alignStart="@+id/btn_nombre"
        android:layout_below="@+id/btn_nombre"
        android:layout_marginTop="24dp"
        android:text="Ver ubicaciones" />

    <Button
        android:id="@+id/btn_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_ubicaciones"
        android:layout_alignStart="@+id/btn_ubicaciones"
        android:layout_below="@+id/btn_ubicaciones"
        android:layout_marginTop="26dp"
        android:text="Ver Mapas" />
</RelativeLayout>

